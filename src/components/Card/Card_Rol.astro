---
interface Props {
  pixel_img: string;
  rol: string;
  nombre_miembro: string;
  instagram_miembro: string;
}

const { pixel_img, rol, nombre_miembro, instagram_miembro } = Astro.props;
---

<div
  class="text-center duration-300 z-10 hover:-rotate-0 [transform:rotate3d(1_,-1,_1,_0deg)] shadow-slate-500 group border hover:shadow-lg overflow-hidden rounded-2xl h-auto w-72 bg-white p-3 flex flex-col gap-2" data-aos="fade-up"
>
  <div class="flex">
    <div class="px-1">
      <span class="inline-block w-4 h-4 bg-red-500 rounded-full"></span>
    </div>
    <div class="px-1">
      <span class="inline-block w-4 h-4 bg-yellow-400 rounded-full"></span>
    </div>
    <div class="px-1">
      <span class="inline-block w-4 h-4 bg-green-500 rounded-full"></span>
    </div>
  </div>

  <div class="flex items-center justify-center">
    <div class="flex items-center justify-center w-10 h-10 rounded-full">
      <img loading="eager" src={pixel_img} alt={nombre_miembro} title={nombre_miembro} />
    </div>
  </div>

  <div class="text-black-50">
    <span class="text-xl font-bold text-blue-900">{rol}</span>
    <p class="font-medium text-md">{nombre_miembro}</p>
  </div>
  <a
    title={rol}
    href={instagram_miembro}
    target="_blank" rel="noopener noreferrer"
    class="hover:bg-[#006068] border rounded-md hover:text-gray-50 bg-white font-semibold text-[#006068] px-3 py-2 flex flex-row justify-center items-center gap-1 border-b-4 hover:border-0 duration-200 delay-200"
    >Instagram
    <svg
      class="w-6 h-6 stroke-current"
      width="44"
      height="44"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="none"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path
        d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
      ></path>
      <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path>
      <path d="M16.5 7.5l0 .01"></path>
    </svg>
  </a>
</div>
